#site-title a:hover
	text-decoration none
a
  color #00B7FF

body
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	padding-bottom 40px

.container-narrow
	margin 0 auto
	max-width 700px

#edit-form-actions
	margin-top 10px
.edit-post-menu
	position relative
	left -40px
	float left
	top 20px
	margin-right -37px
.nav-tabs.edit-post-menu
	border none
.nav-tabs.edit-post-menu > li > a:hover
	border-color #dddddd
.nav-tabs.edit-post-menu > li > a
	padding-top 3px
	padding-bottom 8px
	line-height 21px
	border 1px solid transparent
	-webkit-border-radius 4px
	-moz-border-radius 4px
	border-radius 4px