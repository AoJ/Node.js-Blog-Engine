<div class="span10">
	<form method="get" action="/{{#post}}updatePost{{/post}}{{^post}}createPost{{/post}}">
		<input type="hidden" name="postId" value="{{post.id}}">
		<input class="input-xxlarge" name="title" type="text" placeholder="Blog Entry Title" value="{{post.title}}">
		<textarea class="xxlarge ckeditor" name="content" rows="13">{{{post.content}}}</textarea>
		<div id="edit-form-actions" class="pull-right">
			<a href="/" class="btn btn-danger">Cancel</a>
			<button type="submit" class="btn btn-info">Publish</button>
		</div>
	</form>
</div>